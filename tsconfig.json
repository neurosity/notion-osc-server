{
  "compilerOptions": {
    "target": "es2018",
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["ES2020", "dom"],
    "jsx": "preserve",
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "strict": false,
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
